<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Database connection settings -->
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://127.0.0.1:5432/library</property>
		<property name="connection.username">postgres</property>
		<property name="connection.password">admin123</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<!-- Drop and re-create the database schema on startup -->
		<property name="hbm2ddl.auto">update</property>

		<!-- Clear disabling contextual LOB creation as createClob() method error -->
		<property name="hibernate.jdbc.lob.non_contextual_creation">true</property>

		<!-- Names the annotated entity class -->
		<mapping class="com.javafee.hibernate.dto.association.City" />
		<mapping class="com.javafee.hibernate.dto.association.Language" />
		<mapping class="com.javafee.hibernate.dto.common.UserData" />
		<mapping class="com.javafee.hibernate.dto.common.SystemData" />
		<mapping class="com.javafee.hibernate.dto.common.SystemProperties" />
		<mapping class="com.javafee.hibernate.dto.library.Client" />
		<mapping class="com.javafee.hibernate.dto.library.Worker" />
		<mapping class="com.javafee.hibernate.dto.library.LibraryData" />
		<mapping class="com.javafee.hibernate.dto.library.LibrarySystemData" />
		<mapping class="com.javafee.hibernate.dto.library.LibrarySystemProperties" />
		<mapping class="com.javafee.hibernate.dto.library.LibraryWorker" />
		<mapping class="com.javafee.hibernate.dto.library.LibraryWorkerId" />
		<mapping class="com.javafee.hibernate.dto.library.Book" />
		<mapping class="com.javafee.hibernate.dto.library.Author" />
		<mapping class="com.javafee.hibernate.dto.library.PublishingHouse" />
		<mapping class="com.javafee.hibernate.dto.library.Category" />
		<mapping class="com.javafee.hibernate.dto.library.Volume" />
		<mapping class="com.javafee.hibernate.dto.library.Lend" />
		<mapping class="com.javafee.hibernate.dto.library.RawLendingData" />
		<mapping class="com.javafee.hibernate.dto.library.Penalty" />
	</session-factory>
</hibernate-configuration>